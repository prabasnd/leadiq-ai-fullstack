            },
            "url": {
              "raw": "{{baseUrl}}/api/leads/:leadId",
              "host": ["{{baseUrl}}"],
              "path": ["api", "leads", ":leadId"],
              "variable": [
                {
                  "key": "leadId",
                  "value": "lead_id_here"
                }
              ]
            }
          }
        },
        {
